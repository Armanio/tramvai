{
  "$schema": "https://github.com/TinkoffCreditSystems/tramvai/-/raw/master/packages/cli/src/schema/autogeneratedPublicSchema.json",
  "projects": {
    "{{configEntry.name}}" : {
      "name": "{{configEntry.name}}",
      "root": "src",
      "type": "application",
      "commands": {
        "build": {
          "options": {
            "server": "src/index.ts",
            "vendor": "src/vendor.ts"
          },
          "configurations": {
            "sourceMap": true,
            "modern": true,
            "granularChunks": true,
            "postcss": {
              "config": "src/postcss"
            }
          }
        },
        "serve": {
          "configurations": {
            "hotRefresh": true,
            "modern": true
          }
        }
      }
    }
  }
}
